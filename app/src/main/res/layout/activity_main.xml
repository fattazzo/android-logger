<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="All Log level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sampleLogButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Collection Log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collectionLogButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sampleLogButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="JSON and XML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jsonXmlLogButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/collectionLogButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Thread Log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/threadLogButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/jsonXmlLogButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Disk Log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diskLogButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/threadLogButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Compact Log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/compactLogButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/diskLogButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="7dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>